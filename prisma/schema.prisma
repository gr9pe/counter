generator client {
  provider = "prisma-client"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model profiles {
  id         BigInt     @id @default(autoincrement())
  name       String?
  sex        String?
  weight_kg  Decimal?
  created_at DateTime   @default(now())

  drinks     drinks[]
}

model drinks {
  id         BigInt     @id @default(autoincrement())
  created_at DateTime   @default(now())
  profile_id BigInt
  amount_ml  Decimal?
  type       String?

  profile    profiles   @relation(fields: [profile_id], references: [id])
}